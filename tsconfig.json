{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@common/*": ["src/common/*"],
      "@users/*": ["src/users/*"],
      "@boards/*": ["src/boards/*"],
      "@types/*": ["src/types/*"],
      "@util/*": ["src/util/*"],
      "@database/*": ["src/database/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
